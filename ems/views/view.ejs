<!DOCTYPE html>
<html lang="en">
  <%- include ("header") %>
  <body>
    <div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column">
      <%- include ("navbar") %>
      <h2>-- Employee Record --</h2>

      <div>
        <div class="form-group">
          <label for="first">First Name:</label>
          <input type="text" class="form-control" id="first" value="<%= employees[0].firstName %>" name="first" readonly />
        </div>

        <div class="form-group">
          <label for="last">Last Name:</label>
          <input type="text" class="form-control" id="last" value="<%= employees[0].lastName %>" name="last" readonly />
        </div>
      </div>
      <br /><br />
      <a href="/list">Return to Employees</a>

      <%- include ("footer") %>
    </div>
  </body>
</html>
